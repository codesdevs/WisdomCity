<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.movie.MovieDetailsActivity">
    <include layout="@layout/activity_title"/>
    <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/cover"
                android:layout_width="133dp"
                android:layout_height="158dp"
                android:scaleType="fitXY"
                android:src="@drawable/movie_cover"/>
        <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="万里归途"
                      android:id="@+id/name"
                      android:textColor="@color/black"
                      android:layout_marginBottom="10dp"
                      android:textSize="20sp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="20000想看"
                      android:id="@+id/likeNum"
                      android:textColor="@color/black"
                      android:layout_marginBottom="10dp"
                      android:textSize="13sp"/>
            <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="中文"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"/>
            <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="137分钟"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"/>
            <TextView
                    android:id="@+id/playDate"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="2021-05-01上映"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="剧情介绍"
                  android:textSize="20sp"
                  android:textColor="@color/black"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                  android:layout_marginTop="10dp"
                  android:id="@+id/introduction"
                  android:layout_marginLeft="10dp"
                  android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>